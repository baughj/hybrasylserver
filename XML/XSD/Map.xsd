  <xs:include schemaLocation="Common.xsd"/>

  <!-- Mapwarp / worldwarp subelements -->
  <xs:complexType name="Warp">
    <xs:sequence>
      <xs:element name="Description" minOccurs="0" maxOccurs="1" type="String8" />
      <xs:sequence>
        <xs:element name="MapTarget" minOccurs="0" maxOccurs="1">
          <xs:complexType>
            <xs:simpleContent>
              <xs:extension base="String8">
                <xs:attribute name="X" type="xs:unsignedByte" use="required" />
                <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>
        <xs:element name="WorldMapTarget" minOccurs="0" maxOccurs="1" type="String8"/>
      </xs:sequence>
      <xs:element name="Restrictions" minOccurs="0" maxOccurs="1" type="WarpRestrictions" />
    </xs:sequence>
    <xs:attribute name="X" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
  </xs:complexType>

  <!-- Reactor subelements -->
  <xs:complexType name="Reactor">
    <xs:sequence>
      <xs:element name="Description" type="String16" minOccurs="0" maxOccurs="1" />
      <xs:element name="Script" type="String8" minOccurs="1" maxOccurs="1" />
    </xs:sequence>
    <xs:attribute name="X" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Blocking" default="false" type="xs:boolean" />
    <xs:attribute name="AllowDead" default="false" type="xs:boolean" />
  </xs:complexType>

  <!-- Signpost subelements -->
  <xs:complexType name="Signpost">
    <xs:sequence>
      <xs:element name="Message" type="String16" minOccurs="1" maxOccurs="1" />
      <xs:element name="Script" type="String8" minOccurs="0" maxOccurs="1" />
    </xs:sequence>
    <xs:attribute name="X" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
  </xs:complexType>

  <!-- Messageboards -->
  <xs:complexType name="MessageBoard">
    <xs:sequence>
      <xs:element name="Name" type="String8" />
      <xs:element name="Description" type="String16" />
      <xs:element name="Script" type="String8" />
    </xs:sequence>
    <xs:attribute name="X" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
  </xs:complexType>

  <!-- Signposts (collections of messageboard / signpost elements) -->
  <xs:complexType name="Signs">
    <xs:sequence>
      <xs:sequence minOccurs="1" maxOccurs="unbounded">
        <xs:element name="Signposts" type="Signpost" />
        <xs:element name="MessageBoards" type="MessageBoard" />
      </xs:sequence>
    </xs:sequence>
  </xs:complexType>

  <!-- Reactors -->
  <xs:complexType name="Reactors">
    <xs:sequence>
      <xs:element name="Reactor" type="Reactor" minOccurs="1" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <!-- Warps -->
  <xs:complexType name="Warps">
    <xs:sequence>
      <xs:element name="Warp" type="Warp" minOccurs="1" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <!-- NPCs -->
  <xs:complexType name="Npcs">
    <xs:sequence>
      <xs:element name="Npc" type="MapNpc" minOccurs="1" maxOccurs="unbounded" />
    </xs:sequence>
  </xs:complexType>

  <!-- Map -->
  <xs:complexType name="Map">
    <xs:sequence>
      <xs:element name="Name" type="String8" minOccurs="1" maxOccurs="1" />
      <xs:element name="Description" type="String16" minOccurs="0" maxOccurs="1" />
      <xs:element name="Flags" type="MapFlags" minOccurs="0" maxOccurs="1" />
      <xs:element name="Warps" type="Warps" minOccurs="0" maxOccurs="1" />
      <xs:element name="Reactors" type="Reactors" minOccurs="0" maxOccurs="1" />
      <xs:element name="Npcs" type="Npcs" minOccurs="0" maxOccurs="1" />
      <xs:element name="Signs" type="Signs" minOccurs="0" maxOccurs="1" />
    </xs:sequence>
    <xs:attribute name="Id" type="xs:unsignedShort" use="required" />
    <xs:attribute name="Music" type="xs:unsignedByte" default="0" />
    <xs:attribute name="X" type="xs:unsignedByte" use="required" />
    <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
    <xs:attribute name="IsEnabled" type="xs:boolean" use="optional" default="true"/>
  </xs:complexType>

  <xs:complexType name="MapNpc">
    <xs:attribute name="Name" type="String8"/>
    <xs:attribute name="X" type="xs:unsignedByte"/>
    <xs:attribute name="Y" type="xs:unsignedByte"/>
    <xs:attribute name="Direction" type="xs:unsignedByte" default="0"/>
  </xs:complexType>

  <!-- Worldmap point -->
  <xs:complexType name="WorldMapPoint">
    <xs:sequence>
      <xs:element name="Description" minOccurs="0" maxOccurs="1" type="String8" />
      <xs:element name="Name" minOccurs="1" maxOccurs="1" type="String8" />
      <xs:element name="Target" minOccurs="1" maxOccurs="1">
        <xs:complexType>
          <xs:simpleContent>
            <xs:extension base="String8">
              <xs:attribute name="X" type="xs:unsignedByte" use="required" />
              <xs:attribute name="Y" type="xs:unsignedByte" use="required" />
            </xs:extension>
          </xs:simpleContent>
        </xs:complexType>
      </xs:element>
      <xs:element name="Restrictions" minOccurs="0" maxOccurs="1" type="WarpRestrictions" />
    </xs:sequence>
    <xs:attribute name="X" type="xs:unsignedShort" use="required" />
    <xs:attribute name="Y" type="xs:unsignedShort" use="required" />
  </xs:complexType>

  <!-- Worldmap points (collection of worldmap points) -->
  <xs:complexType name="WorldMapPoints">
    <xs:sequence>
      <xs:element name="Point" type="WorldMapPoint" minOccurs="1" maxOccurs="unbounded" />
      <xs:element name="Restrictions" minOccurs="0" maxOccurs="1" type="WarpRestrictions" />
    </xs:sequence>
  </xs:complexType>

  <!-- World map -->
  <xs:complexType name="WorldMap">
    <xs:sequence>
      <xs:element name="Name" minOccurs="1" maxOccurs="1" type="String8" />
      <xs:element name="Description" type="String16" minOccurs="0" maxOccurs="1" />
      <xs:element name="Points" type="WorldMapPoints" minOccurs="0" maxOccurs="1" />
    </xs:sequence>
    <xs:attribute name="ClientMap" type="String8" use="required" />
  </xs:complexType>

  <!-- Lastly, add map/worldmap root elements -->
  <xs:element name="Map" type="Map" />
  <xs:element name="WorldMap" type="WorldMap" />
</xs:schema>
