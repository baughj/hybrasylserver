  <xs:include schemaLocation="Common.xsd"/>

  <!-- Damage effects type -->
  <xs:complexType name="StatusDamage">
    <xs:all>
      <xs:element name="Flags" type="DamageFlags" />
      <xs:element name="Simple" type="SimpleQuantity" />
      <xs:element name="Formula" type="xs:string" />
    </xs:all>
    <xs:attribute name="Type" type="DamageType" />
  </xs:complexType>

  <!-- Heal effects type -->
  <xs:complexType name="StatusHeal">
    <xs:sequence minOccurs="0" maxOccurs="1">
      <xs:element name="Simple" type="SimpleQuantity" />
      <xs:element name="Formula" type="xs:string" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Status">
    <xs:all>
      <xs:element name="Category" type="String8"/>
      <xs:element minOccurs="0" name="CastRestriction" type="CastRestriction" />
      <xs:element minOccurs="0" name="Effects" type="StatusEffects" />
      <xs:element minOccurs="0" name="ProhibitedMessage" type="String8"/>
      <xs:element minOccurs="0" name="Script" type="String8" />
    </xs:all>
    <xs:attribute name="Duration" type="xs:int" use="optional" />
    <xs:attribute name="Tick" type="xs:int" default="1" use="optional"/>
    <xs:attribute name="Icon" type="xs:unsignedShort" use="required"/>
    <xs:attribute name="Name" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="CastRestriction">
    <xs:attribute name="Use" type="xs:token"/>
    <xs:attribute name="Receive" type="xs:token"/>
  </xs:complexType>

  <xs:complexType name="StatusAnimations">
    <xs:all>
      <xs:element minOccurs="0" name="Target" type="Animation"/>
      <xs:element minOccurs="0" name="SpellEffect" type="Animation"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="Conditions">
    <xs:all>
      <xs:element minOccurs="0" name="Set" type="CreatureCondition"/>
      <xs:element minOccurs="0" name="Unset" type="CreatureCondition"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="Messages">
    <xs:all>
      <xs:element minOccurs="0" name="Target" type="String8"/>
      <xs:element minOccurs="0" name="Source" type="String8"/>
      <xs:element minOccurs="0" name="Group" type="String8"/>
      <xs:element minOccurs="0" name="Say" type="String8"/>
      <xs:element minOccurs="0" name="Shout" type="String8"/>
    </xs:all>
  </xs:complexType>

  <!-- Script source -->
  <xs:simpleType name="ScriptSource">
    <xs:restriction base="xs:token">
      <xs:enumeration value="Target"/>
      <xs:enumeration value="Caster"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="Handler">
    <xs:all>
      <xs:element minOccurs="0"  name="Function" type="String8"/>
      <xs:element minOccurs="0"  name="ScriptSource" type="ScriptSource"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="ModifierEffect" >
    <xs:all>
      <xs:element name="Animations" type="StatusAnimations" minOccurs="0"/>
      <xs:element name="Sound" minOccurs="0">
        <xs:complexType>
          <xs:attribute name="Id" type="xs:unsignedByte" use="required" />
        </xs:complexType>
      </xs:element>
      <xs:element name="Messages" minOccurs="0" type="Messages"/>
      <xs:element name="Heal" minOccurs="0" type="StatusHeal" />
      <xs:element name="Damage" minOccurs="0" type="StatusDamage" />
      <xs:element name="StatModifiers" minOccurs="0" type="StatModifiers" />
      <xs:element name="Conditions" minOccurs="0" type="Conditions"/>
      <xs:element name="Handler" minOccurs="0" type="Handler"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="StatusEffects">
    <xs:all>
      <xs:element minOccurs="0" name="OnApply" type="ModifierEffect" />
      <xs:element minOccurs="0" name="OnTick" type="ModifierEffect" />
      <xs:element minOccurs="0" name="OnRemove" type="ModifierEffect" />
      <xs:element minOccurs="0" name="OnExpire" type="ModifierEffect" />
    </xs:all>
  </xs:complexType>

  <xs:element name="Status" type="Status"/>

</xs:schema>